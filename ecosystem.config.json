{
  "apps": [
    {
      "name": "ricardo-beauty-assistant",
      "script": "server-ngrok.js",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "error_file": "./logs/pm2-error.log",
      "out_file": "./logs/pm2-out.log",
      "log_file": "./logs/pm2-combined.log",
      "time": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "merge_logs": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "kill_timeout": 5000,
      "restart_delay": 4000
    }
  ]
}
