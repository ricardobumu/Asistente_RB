# =================================
# ARCHIVO DE CONFIGURACIÓN SEGURO
# =================================
# Este archivo debe contener solo configuraciones no sensibles
# Los secretos deben estar en .env.local (no subir a git)

# =================================
# CONFIGURACIÓN DEL SERVIDOR
# =================================
PORT=3000
NODE_ENV=development

# =================================
# APLICACIÓN
# =================================
APP_NAME=Asistente RB
APP_VERSION=1.0.0

# =================================
# CONFIGURACIÓN DE CORS
# =================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://tu-dominio.com

# =================================
# CONFIGURACIÓN DE RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
REGISTER_RATE_LIMIT_MAX=3

# =================================
# CONFIGURACIÓN RGPD
# =================================
GDPR_DATA_RETENTION_DAYS=365
GDPR_CLEANUP_ENABLED=true
GDPR_NOTIFICATION_EMAIL=info@ricardoburitica.eu
GDPR_DPO_EMAIL=info@ricardoburitica.eu
GDPR_COMPANY_NAME=Ricardo Buriticá Beauty Consulting
GDPR_COMPANY_ADDRESS=España
GDPR_SUPERVISORY_AUTHORITY=Agencia Española de Protección de Datos (AEPD)

# =================================
# CONFIGURACIÓN DE INTELIGENCIA ARTIFICIAL
# =================================
AI_ANALYSIS_MODEL=gpt-4-turbo-preview
AI_RESPONSE_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=800
AI_TEMPERATURE=0.1
AI_CONFIDENCE_THRESHOLD=0.6

# =================================
# NOTA IMPORTANTE
# =================================
# Los secretos y credenciales están en .env.local
# Para configurar: cp .env.example .env.local
# Luego edita .env.local con tus credenciales reales




