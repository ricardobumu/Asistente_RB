# =================================
# CONFIGURACIÓN DEL SERVIDOR
# =================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# =================================
# INFORMACIÓN DE LA APLICACIÓN
# =================================
APP_NAME=Asistente RB
APP_VERSION=2.0.0

# =================================
# BASE DE DATOS SUPABASE (REQUERIDO)
# =================================
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu_supabase_anon_key_aqui
SUPABASE_SERVICE_ROLE_KEY=tu_supabase_service_role_key_aqui

# =================================
# TWILIO WHATSAPP (REQUERIDO PARA MENSAJERÍA)
# =================================
TWILIO_ACCOUNT_SID=tu_twilio_account_sid
TWILIO_AUTH_TOKEN=tu_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=+14155238886

# =================================
# OPENAI (REQUERIDO PARA IA)
# =================================
OPENAI_API_KEY=sk-tu_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =================================
# CALENDLY (REQUERIDO PARA WEBHOOKS)
# =================================
CALENDLY_ACCESS_TOKEN=tu_calendly_access_token
CALENDLY_USER_URI=https://api.calendly.com/users/tu_user_id
CALENDLY_WEBHOOK_URI=tu_uri_webhook_de_calendly
CALENDLY_SIGNING_KEY=tu_calendly_signing_key

# =================================
# GOOGLE CALENDAR (OPCIONAL)
# =================================
GOOGLE_CLIENT_ID=tu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui
GOOGLE_REDIRECT_URI=https://bot.ricardoburitica.eu/auth/google/callback
GOOGLE_CALENDAR_ID=primary
GOOGLE_CALENDAR_TIMEZONE=Europe/Madrid

# =================================
# SEGURIDAD
# =================================
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion
JWT_REFRESH_SECRET=tu_jwt_refresh_secret_super_seguro_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =================================
# CORS
# =================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://tu-dominio.com

# =================================
# CONFIGURACIÓN DE LOGS
# =================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# =================================
# CONFIGURACIÓN DE RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
WEBHOOK_RATE_LIMIT_MAX=100

# =================================
# CONFIGURACIÓN DE CONTEXTO CONVERSACIONAL
# =================================
CONTEXT_RETENTION_HOURS=24
MAX_CONTEXT_MESSAGES=50

# =================================
# CONFIGURACIÓN DE NOTIFICACIONES
# =================================
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# =================================
# CONFIGURACIÓN DE ARCHIVOS
# =================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =================================
# CONFIGURACIÓN DE CACHE
# =================================
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# =================================
# CONFIGURACIÓN DE WEBHOOK VALIDATION
# =================================
VALIDATE_TWILIO_SIGNATURE=true
VALIDATE_CALENDLY_SIGNATURE=true

# =================================
# CONFIGURACIÓN DE DEPLOYMENT
# =================================
RAILWAY_PROJECT_ID=tu_railway_project_id
RAILWAY_ENVIRONMENT=production
PUBLIC_URL=https://tu-dominio.com

# =================================
# CONFIGURACIÓN DE TIMEZONE
# =================================
DEFAULT_TIMEZONE=Europe/Madrid
DEFAULT_LOCALE=es-ES

# =================================
# CONFIGURACIÓN DE BUSINESS
# =================================
BUSINESS_NAME=Asistente RB
BUSINESS_PHONE=+34600000000
BUSINESS_EMAIL=info@ricardoburitica.eu
BUSINESS_ADDRESS=Madrid, España

# =================================
# CONFIGURACIÓN DE GDPR
# =================================
GDPR_RETENTION_DAYS=365
GDPR_CLEANUP_ENABLED=true
GDPR_CONTACT_EMAIL=privacy@ricardoburitica.eu
